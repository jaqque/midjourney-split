FROM debian:latest

RUN apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get install \
    --assume-yes \
    --no-install-recommends \
    ruby \
    imagemagick \
    zip \
  && apt-get clean \
  && rm -rf /var/lib/apt/lists/*
  # ruby-rmagick
  # ruby-zip
RUN gem install --no-document \
  sinatra
# digest-crc  # for digest/crc32

COPY app.rb split.sh /app
WORKDIR /app
EXPOSE 4567
CMD ruby app.rb
